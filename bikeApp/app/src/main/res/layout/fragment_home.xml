<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="treadsetters.bikesmart.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/frag_name"
        android:id="@+id/textView"
        android:layout_gravity="center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:text="Logout"
        android:id="@+id/button_logout"
        android:layout_gravity="right|bottom" />

    <Button
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:text="Add Bike"
        android:id="@+id/button_add_bike"
        android:layout_gravity="center_horizontal|bottom" />

    <Button
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:text="Find bikes"
        android:id="@+id/button_find_bikes"
        android:layout_gravity="left|bottom" />

</FrameLayout>
